@model Fall2025_Project3_snkyemba.Models.ActorMovie
@{
    ViewData["Title"] = "Delete Relationship";
}

<h2>Delete Relationship</h2>
<h4>Are you sure you want to delete this relationship?</h4>
<hr />

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Actor</dt>
        <dd class="col-sm-10">@Model.Actor.Name</dd>

        <dt class="col-sm-2">Movie</dt>
        <dd class="col-sm-10">@Model.Movie.Title</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="actorId" value="@Model.ActorId" />
    <input type="hidden" name="movieId" value="@Model.MovieId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>