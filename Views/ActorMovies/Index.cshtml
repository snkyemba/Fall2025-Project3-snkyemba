@model IEnumerable<Fall2025_Project3_snkyemba.Models.ActorMovie>
@{
    ViewData["Title"] = "Actor-Movie Relationships";
}

<h2>Actor-Movie Relationships</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Add New Relationship</a>

<table id="actorMoviesTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Actor Name</th>
            <th>Movie Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Actors" asp-action="Details" asp-route-id="@item.ActorId">
                        @item.Actor.Name
                    </a>
                </td>
                <td>
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.MovieId">
                        @item.Movie.Title
                    </a>
                </td>
                <td>
                    <a class="btn btn-sm btn-danger"
                       asp-action="Delete"
                       asp-route-actorId="@item.ActorId"
                       asp-route-movieId="@item.MovieId">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#actorMoviesTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthMenu": [10, 25, 50, 100]
            });
        });
    </script>
}