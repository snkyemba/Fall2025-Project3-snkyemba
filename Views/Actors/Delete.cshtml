@model Fall2025_Project3_snkyemba.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<h2>Delete Actor</h2>
<h4>Are you sure you want to delete this actor?</h4>
<hr />

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">IMDB Link</dt>
        <dd class="col-sm-10">
            <a href="@Model.IMDBLink" target="_blank">Link</a>
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
